
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  username String
  email String @unique
  password String
  websiteTicks websiteTick[]

}

model Website {
  id        String        @id @default(uuid())
  url       String
  timeAdded DateTime
  ticks     websiteTick[]
}

model Region {
  id    String        @id @default(uuid())
  name  String
  ticks websiteTick[]
}

model websiteTick {
  id               String        @id @default(uuid())
  response_time_ms Int
  timeAdded        DateTime      @default(now())
  user             User          @relation(fields: [user_id], references: [id])
  user_id          String
  status           WebsiteStatus
  region           Region        @relation(fields: [region_id], references: [id])
  website          Website       @relation(fields: [website_id], references: [id])
  region_id        String
  website_id       String
}

enum WebsiteStatus {
  Up
  Down
  Unknown
}
